<section class="post_form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
          
          <%= f.label :message %>
          <%= f.text_area :message %>
        </div>
        <%= f.submit "Post", class: "btn btn-primary" %>
      
      <% end %>
    </div>
  </div>
</section>